
				ConsoleKeyInfo keyinfob;
				keyinfob = Console.ReadKey(true);
				switch (keyinfo.Key)
				{
				case ConsoleKey.DownArrow:
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine(" ");
					move_up_down++;
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine("x");
					break;
				case ConsoleKey.UpArrow:
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine(" ");
					move_up_down--;
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine("x");
					break;
				case ConsoleKey.LeftArrow:
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine(" ");
					move_left_right--;
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine("x");
					break;
				case ConsoleKey.RightArrow:
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine(" ");
					move_left_right++;
					Console.SetCursorPosition(move_left_right, move_up_down);
					Console.WriteLine("x");
					break;

				}

	
			}

		}

	}

}
